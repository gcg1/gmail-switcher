{
  "name": "Prime Ratings: IMDb Ratings on Prime Video",
  "version": "0.0.0.6",
  "description": "See IMDb ratings for shows on the Amazon Prime Video homepage.",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "icons": { "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.uk/Amazon-Video/*",
        "https://www.amazon.co.uk/gp/*",
        "https://www.amazon.com/Amazon-Video/*",
        "https://www.amazon.com/gp/*",
        "https://www.amazon.de/Amazon-Video/*",
        "https://www.amazon.de/gp/*",
        "https://www.amazon.fr/Amazon-Video/*",
        "https://www.amazon.de/gp/*",
        "https://www.primevideo.com/*",
        "https://amazon.ca/Amazon-Video/*",
        "https://amazon.ca/gp/*",
        "https://amazon.com.br/Amazon-Video/*",
        "https://amazon.com.br/gp/*",
        "https://amazon.com.mx/Amazon-Video/*",
        "https://amazon.com.mx/gp/*",
        "https://amazon.cn/Amazon-Video/*",
        "https://amazon.cn/gp/*",
        "https://amazon.in/Amazon-Video/*",
        "https://amazon.in/gp/*",
        "https://amazon.co.jp/Amazon-Video/*",
        "https://amazon.co.jp/gp/*",
        "https://amazon.sg/Amazon-Video/*",
        "https://amazon.sg/gp/*",
        "https://amazon.com.tr/Amazon-Video/*",
        "https://amazon.com.tr/gp/*",
        "https://amazon.ae/Amazon-Video/*",
        "https://amazon.ae/gp/*",
        "https://amazon.it/Amazon-Video/*",
        "https://amazon.it/gp/*",
        "https://amazon.nl/Amazon-Video/*",
        "https://amazon.nl/gp/*",
        "https://amazon.es/Amazon-Video/*",
        "https://amazon.es/gp/*",
        "https://amazon.com.au/Amazon-Video/*",
        "https://amazon.com.au/gp/*"
      ],
      "css": ["styles.css"],
      "js": [
        "firebase-app.js",
        "firebase-firestore.js",
        "db.js",
        "background.js"
      ]
    }
  ]
}
